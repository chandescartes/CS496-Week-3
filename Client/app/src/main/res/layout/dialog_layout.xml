<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#66000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_dialog">

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Title"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_modify_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/txt_dialog_title" />

        <TextView
            android:id="@+id/txt_dialog_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Food"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_modify_edit"/>

        <Spinner
            android:id="@+id/txt_modify_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:entries="@array/category"
            android:layout_marginTop="35dp"
            android:layout_alignTop="@+id/txt_dialog_food"
            android:layout_centerHorizontal="true">
        </Spinner>

        <ImageButton
            android:layout_below="@+id/txt_modify_food"
            android:id="@+id/btn_modify_done"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/yes_button"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"/>

    </RelativeLayout>


</RelativeLayout>